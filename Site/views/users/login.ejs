<!DOCTYPE html>
<html lang="en">
<%-include('../partials/head')%>


<body > 
  <%-include('../partials/header')%>
  <main>
      <div class="formContainer">
          <% if (locals.msg) { %>
            <%-include('../partials/message', { msg })%>
          <% } %>
          <form action="/user/login" method="POST" id="loginForm">
          <!--Campos del Login-->
              <!--Contenedor de login-->
              <div class="loginImg" style="text-align: center;">
                  <i class="fas fa-user-circle"></i>
              </div>
              <div>
                  <% if (locals.errors && errors.credentials) { %>
                    <p><%= errors.credentials.msg %> </p>
                  <% } %>
              </div>
              <h1 style="text-align: center; margin-bottom: 1rem;">Iniciar Sesión</h1>
              <div class="field">
                <label  for="email"> Correo Electrónico</label>
                <input  type="email" id="email" name="email" value="<%= locals.user && user.email  %> ">
                <p class="feedback"></p>
                <% if (locals.errors && errors.email) { %>
                  <small style="color: red"><%= errors.email.msg %> </small> <br>
                <% } %>               
              </div>
              <div class="field">
                <label  for="contraseña">Contraseña</label>
                <input type="password" id="password" name="password">
                <p class="feedback"></p>
                <% if (locals.errors && errors.password) { %>
                  <small style="color: red"><%= errors.password.msg %> </small>
                <% } %> 
              </div>
             
              <button class="btn primary" type="submit">Ingresar</button>
            
              <div class="rememberLogin">
                  <input class="checkbox" type="checkbox" id="rememberMe" name="rememberMe"><label for="rememberMe">Recordarme</label>
              </div> 
              <a href="/user/register">¿Todavía no tenes una cuenta? Registrate</a>
            </form>
            <!-- <a href="">Olvidé mi contraseña</a> -->
        </div>
      <!--Falta link para olvidar contraseña-->
  </main>

  <%-include('../partials/footer')%> 
  <%-include('../partials/loadScript', { scriptName: 'validator.js'})  %>  
</body>
</html>