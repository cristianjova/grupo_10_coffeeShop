<!DOCTYPE html>
<html lang="en">
    
    <%- include('../partials/head.ejs') %>
    
    <body>
        <%- include('../partials/header.ejs') %>

        <main class="container">
            <!--Productos destacados-->
            <section class="products-page">
                
                <h1 class="hometitle">
                    <%= locals.search ? "Resultados para: " + locals.search : "Nuestros productos" %>
                </h1>
                <form action="/products/search" class="filterProducts">
                    <label for="name">Ordenar por precio</label><br>
                    <div>
                        <label for="bySize">Ascendente <i class="fas fa-arrow-up"></i></label>
                        <input type="radio" name="filterByPrice" value="asc" id="asc" <%= locals.filterPrice && locals.filterPrice == 'asc' ? 'checked' : null %> >
                    </div>
                    <div>
                        <label for="bySize">Descendente <i class="fas fa-arrow-down"></i></label>
                        <input type="radio" name="filterByPrice" value="desc" id="desc" <%= locals.filterPrice && locals.filterPrice == 'desc' ? 'checked' : null %> >
                    </div>
                    <button class="btn primary" type="submit">Confirmar</button>
                </form>
                <div class="container-products">
                    <% if (!products.length) { %>
                        <h2>No hay productos</h2>
                    <% } else {%>
                        <% products.forEach(product => { %>
                            <%- include('../products/partials/product', { product }) %> 
                        <% }); %>
                    <% } } {%>

                </div>

            </section>
               

        </main>

        <%- include('../partials/footer')  %>  
    
    </body>
</html>

